{
  "name": "personal-boilerplate",
  "version": "1.0.0",
  "private": true,
  "dependencies": {
    "axios": "^0.18.0",
    "node-sass-chokidar": "0.0.3",
    "npm-run-all": "^4.1.2",
    "prismic-javascript": "^2.0.1",
    "prismic-reactjs": "^0.3.2",
    "react": "^16.4.0",
    "react-dom": "^16.4.0",
    "react-helmet": "^5.2.0",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "react-scripts": "1.1.4"
  },
  "scripts": {
    "build-css": "node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/",
    "watch-css": "npm run build-css && node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/ --watch --recursive",
    "start-js": "react-scripts start",
    "start": "npm-run-all -p watch-css start-js",
    "build-js": "react-scripts build",
    "build": "npm-run-all build-css build-js",
    "test-eslint": "node_modules/.bin/eslint --ext=js --ext=jsx ./src",
    "test": "npm run test-eslint && react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "create-component": "node ./tools/create-component.js",
    "create-view": "node ./tools/create-view.js"
  },
  "devDependencies": {
    "babel-eslint": "^6.1.2",
    "eslint": "^3.5.0",
    "eslint-config-react-app": "^0.2.1",
    "eslint-plugin-flowtype": "^2.18.1",
    "eslint-plugin-import": "^2.10.0",
    "eslint-plugin-jsx-a11y": "^2.2.2",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.7.0",
    "eslint-plugin-react": "^6.10.3",
    "ftp-deploy": "^1.2.2",
    "node-sass": "^4.7.2",
    "pre-push": "0.1.1",
    "sass-loader": "^6.0.6"
  },
  "pre-push": [
    "build"
  ]
}
